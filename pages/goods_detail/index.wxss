page {
  margin-bottom: 90rpx;
}
swiper {
  height: 500rpx;
}
.goods_price {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
view.goods_title {
  display: flex;
  font-size: 24rpx;
}
view.goods_title view.goods_name {
  flex: 1;
  padding-right: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
view.goods_title view.shoucang {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #ccc;
}
view.intro view.intro_title {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  background: #fff;
  padding: 20rpx;
}
view.btm_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  display: flex;
  background: #fff;
  width: 100vw;
}
view.btm_tool .tool_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  flex: 1;
  position: relative;
}
view.btm_tool .tool_item button {
  width: 0rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  background: skyblue;
  opacity: 0;
}
view.btm_tool .buy_car {
  flex: 2;
  font-size: 28rpx;
  font-weight: 600;
  background-color: #ffa500;
  color: #fff;
}
view.btm_tool .buy_now {
  flex: 2;
  font-size: 28rpx;
  font-weight: 600;
  background-color: var(--themeColor);
  color: #fff;
}
